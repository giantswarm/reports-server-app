{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "image": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string"
                },
                "registry": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "name": {
            "type": "string"
        },
        "reports-server": {
            "type": "object",
            "properties": {
                "apiServices": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "postgresql": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "monitoring": {
            "type": "object",
            "properties": {
                "podLogs": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "Enable log collection for monitoring"
                        },
                        "annotations": {
                            "type": "object",
                            "description": "Optional additional annotations"
                        },
                        "labels": {
                            "type": "object",
                            "description": "Optional additional labels"
                        },
                        "relabelings": {
                            "type": "array",
                            "description": "List of relabeling rules for logs"
                        },
                        "tenant": {
                            "type": "string",
                            "description": "Tenant to use for monitoring",
                            "default": "giantswarm"
                        }
                    }
                }
            }
        }
    }
}
